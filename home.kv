#:kivy 2.1.0
<Home> :
    MDBottomNavigation:
        panel_color: rgba(65, 105, 225, 255)
        selected_color_background: rgba(65, 105, 225, 255)
        text_color_active: 0, 0, 0, 1

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Attendance'
            icon: "calendar-multiple-check"
            badge_icon: "numeric-10"

            MDLabel:
                text: 'Attendance'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Class'
            icon: 'account-group'
            badge_icon: "numeric-5"
            on_tab_release:
                # app.clear_screen()
                app.list_class_1()
            Button:
                icon: 'plus-circle'
                pos_hint: {"center_x": .10, "center_y": .10}
                background_color: 0, 0, 0, 0
                font_name: "BPoppins"
                # on_release:
                #     app.list_class_1()
                #     root.manager.transition.direction = "left"
                #     root.manager.current = "home"
            ScrollView:
                MDList:
                    id: container


        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Student'
            icon: 'account-box'

            MDLabel:
                text: 'Student'
                halign: 'center'
        
        MDBottomNavigationItem:
            name: 'screen 4'
            text: 'User Info'
            icon: 'account-details'
            on_tab_release:
                app.user_info()
            MDLabel:
                id: email
                text: ''
                pos_hint: {"center_x": .5, "center_y": .60}
                halign: "center"
                font_name: "BPoppins"
            MDLabel:
                id: name
                text: ''
                pos_hint: {"center_x": .5, "center_y": .50}
                halign: "center"
                font_name: "BPoppins"
            MDLabel:
                id: phone
                text: ''
                pos_hint: {"center_x": .5, "center_y": .40}
                halign: "center"
                font_name: "BPoppins"
            MDIconButton:
                icon: 'exit-to-app'
                pos_hint: {"center_x": .5, "center_y": .26}
                on_release:
                    app.logout()
                    root.manager.transition.direction = "left"
                    root.manager.current = "main"



                
        
